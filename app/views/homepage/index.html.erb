<script>
<% if logged_in? %>
  window.logged_in = true;
  window.current_user = {
    name: "<%= current_user.name %>",
    email: "<%= current_user.email %>",
    github_id: "<%= current_user.github_id %>",
    twitter_id: "<%= current_user.twitter_id %>"
  };
<% else %>
  window.logged_in = false;
<% end %>
</script>
