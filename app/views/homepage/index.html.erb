<script>
<% if logged_in? %>
  window.loggedIn = true;
  window.currentUser = {
    name: "<%= current_user.name %>",
    email: "<%= current_user.email %>",
    github_id: "<%= current_user.github_id %>",
    twitter_id: "<%= current_user.twitter_id %>"
  };
<% else %>
  window.loggedIn = false;
  window.currentUser = null;
<% end %>
</script>

<div id="content"></div>
